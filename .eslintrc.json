{
  "env": {
    "browser": true,
    "es2021": true,
    "vue/setup-compiler-macros": true,
    "jest": true
  },
  "parser": "vue-eslint-parser",
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:vue/vue3-essential",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": ["vue", "@typescript-eslint"],
  "rules": {
    "semi": ["warn", "never"]
  }
}
